# /etc/systemd/system/start_day.service

[Unit]
Description=launch start of day log in vscode
Wants=start_day.timer
PartOf=graphical-session.target

[Service]
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/daedalus/.Xauthority"
Type=forking
User=daedalus
WorkingDirectory=/home/daedalus/workspace/System_Tools/daily_practice/
ExecStart=/home/daedalus/workspace/System_Tools/daily_practice/Journal_Launcher start_day.md

[Install]
WantedBy=user@.service
